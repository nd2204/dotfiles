# yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
# sudo yabai --load-sa
yabai -m config layout float
yabai -m config window_placement second_child

# Padding
yabai -m config top_padding 10
yabai -m config left_padding 14
yabai -m config bottom_padding 14
yabai -m config right_padding 14
yabai -m config window_gap 14

# Mouse
yabai -m config mouse_follows_focus on
yabai -m config focus_follows_mouse autofocus
yabai -m config mouse_modifier shift
yabai -m config mouse_action1 move
yabai -m config mouse_action2 resize
yabai -m config mouse_drop_action swap

# Space config
yabai -m space 1 --label code
yabai -m space 2 --label web
yabai -m space 3 --label doc

# Rules
yabai -m rule --add app=".*" manage=off
yabai -m rule --add app="^WezTerm$" manage=on
yabai -m rule --add app="^Ghostty$" manage=on
yabai -m rule --add app="^Arc$" manage=on
yabai -m rule --add app="^Safari$" manage=on
yabai -m rule --add app="^Code$" manage=on
yabai -m rule --add app="^Preview$" manage=on
yabai -m rule --add app="^Unity$" manage=on
yabai -m rule --add app="^Microsoft Edge$" manage=on
yabai -m rule --add app="^Simulator$" manage=on
yabai -m rule --add app="^Figma$" manage=on
yabai -m rule --add app="^Notion$" manage=on
yabai -m rule --add app="^zathura$" manage=on
yabai -m rule --add app="^Zen$" manage=on
yabai -m rule --add app="^Blender$" manage=on
yabai -m rule --add app="^Obsidian$" manage=on
yabai -m rule --add app="^Books$" manage=on
yabai -m rule --add app="^Neovide$" manage=on

yabai -m config external_bar main:42:0

